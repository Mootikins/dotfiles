format-muted-suffix = %{B#196D6D F#0f2536}%{B- F-}
label-volume-foreground = ${colors.fg}
label-volume-background = ${colors.blue1}
label-muted-foreground = ${colors.fg}
label-muted-background = ${colors.blue1}
#
