#i3 config file (v4)
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

# Set mod key (Mod1=<Alt>, Mod4=<Super>)
set $mod Mod4

# set default desktop layout (default is tiling)
# workspace_layout tabbed <stacking|tabbed>

# set title alignment
title_align center

# Configure border style <normal|1pixel|pixel xx|none|pixel>
default_border pixel 5
default_floating_border pixel 5
new_window pixel 5
new_float pixel 5

# Hide borders
hide_edge_borders none

# change borders    
bindsym $mod+u border none
bindsym $mod+y border pixel 5

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font xft:scientifica 8

# Use Mouse+$mod to drag floating windows
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec alacritty --config-file ~/.config/wpg/templates/dotfiles_templates_alacritty_curie.yml
bindsym $mod+Shift+Return exec alacritty --class "life" --config-file ~/.config/wpg/templates/dotfiles_templates_alacritty_curie.yml
bindsym $mod+Ctrl+Return exec alacritty
bindsym $mod+v exec alacritty --class "life" --config-file ~/.config/wpg/templates/dotfiles_templates_alacritty_curie.yml -e nvim '+au BufWriteCmd vimclippy %y+ | set nomodified' '+set nonumber norelativenumber signcolumn=no laststatus=0 showtabline=0 noruler' vimclippy
bindsym $mod+Shift+p exec alacritty --class "life" --config-file ~/.config/wpg/templates/dotfiles_templates_alacritty_curie.yml -e 'ipython'

# kill focused window
bindsym $mod+Shift+q kill

# start program launcher
bindsym $mod+space exec rofi -show combi -opacity 95 -theme ~/.config/rofi/colors-rofi-dark.rasi -font "curie 10" -columns 4
bindsym $mod+Shift+e exec rofi -show emoji -opacity 95 -theme ~/.config/rofi/colors-rofi-dark.rasi -font "curie 10" -columns 4
bindsym $mod+Shift+w exec ~/Utilities/networkmanager-dmenu/networkmanager_dmenu -theme ~/.config/rofi/colors-rofi-dark.rasi -font "curie 10" -columns 1

