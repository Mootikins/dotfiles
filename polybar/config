[module/mpd]
type = internal/mpd

; Host where mpd is running (either ip or domain name)
; Can also be the full path to a unix socket where mpd is running.
host = 127.0.0.1
port = 6600

; Seconds to sleep between progressbar/song timer sync
; Default: 1
interval = 2

;icon-play = ⏵
;icon-pause = ⏸
;icon-stop = ⏹
;icon-prev = ⏮
;icon-next = ⏭
;icon-seekb = ⏪
;icon-seekf = ⏩
;icon-random = 🔀
;icon-repeat = 🔁
;icon-repeatone = 🔂
;icon-single = 🔂
;icon-consume = ✀

; Siji icons
icon-prev = 
icon-play = 
icon-pause = 
icon-next = 

; icon-prev = 
; icon-stop = 
; icon-play = 
; icon-pause = 
; icon-next = 

;format-online = <icon-prev> <icon-seekb> <icon-stop> <toggle> <icon-seekf> <icon-next>  <icon-repeat> <icon-random>  <bar-progress> <label-time>  <label-song>
format-online =  <icon-prev> <toggle> <icon-next> <label-song>
format-offline = <label-offline>
format-playing = ${self.format-online}
format-paused = ${self.format-online}
format-stopped = " No Media Playing"
format-online-padding = 1
format-online-foreground = ${colors.xcolor0}
format-online-background = ${colors.xcolor11}
format-offline-padding = 1
format-offline-foreground = ${colors.xcolor0}
format-offline-background = ${colors.xcolor11}

label-offline = " MPD Not Running"

